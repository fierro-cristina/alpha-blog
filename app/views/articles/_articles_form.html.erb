<div class="container">

  <div class="row justify-content-center">
    <div class="col-10">

      <%= render "/shared/errors", obj: @article %>
      
      <%= form_with(model: @article, class:"shadow mb-3 p-4 bg-info rounded", local: true) do |f| %>
        <div class="form-group row">
          <%= f.label :title, class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= f.text_field :title, class: "form-control", placeholder: "Title of article"%>
          </div>
        </div>

        <div class="form-group row mt-4">
          <%= f.label :description, class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= f.text_area :description, rows: 10, class: "form-control", placeholder: "Description" %>
          </div>
        </div>

        <div class="form-group row justify-content-center mt-4">
          <%= f.submit class: "col-2 btn btn-outline-light btn-lg"%>
        </div>
      <% end %>
    </div>
    <div class="form-group row justify-content-center">
      <%= link_to '[ Return to articles listing ]', articles_path, class:"col-2 text-info"%>
    </div>
  </div>
</div>